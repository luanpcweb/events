{# templates/talks/add.html.twig #} {% extends 'base.html.twig' %} {% block
    body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card bg-light mb-3 mt-3">
                    <div class="card-body">
                        <div class="card-header mb-3">
                            <div class="row">
                                <div class="col-md-10">View Talk</div>
                            </div>
                        </div>
                        {% if app.user != null %}
                            <div class="row" id="statusForm"></div>

                            <form id="form" method="post">

                                <div class="form-group">
                                    <label for="title">Title</label>
                                    <input type="text" class="form-control" id="title" name="title" value="{{ talk.title }}" >
                                </div>

                                <div class="form-group">
                                    <label for="date_start">Date Talk</label>
                                    <input type="text" class="form-control datepicker" id="date" name="date" value="{{ talk.date|date("m/d/Y") }}">
                                </div>

                                <div class="form-group">
                                    <label for="date_start">Hour Start</label>
                                    <input type="text" class="form-control time" id="date_start" name="hour_start" value="{{ talk.hour_start }}">
                                </div>

                                <div class="form-group">
                                    <label for="date_end">Hour End</label>
                                    <input type="text" class="form-control time" id="date_end" name="hour_end" value="{{ talk.hour_end }}">
                                </div>

                                <div class="form-group">
                                    <label for="event_id">Event</label>
                                    <select class="form-control" id="event_id" name="event_id">
                                        <option>Select the Event</option>
                                        {% if events|length > 0 %}
                                            {% for value in events %}
                                                <option value="{{ value.id }}" {% if talk.event_id == value.id %} selected {% endif %}>{{ value.title }}</option>
                                            {% endfor %}
                                        {% endif %}
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="speaker_id">Speaker</label>
                                    <select class="form-control" id="speaker_id" name="speaker_id">
                                        <option>Select the Speaker</option>
                                        {% if speakers|length > 0 %}
                                        {% for value in speakers %}
                                            <option value="{{ value.id }}" {% if talk.speaker_id == value.id %} selected {% endif %}>{{ value.name }}</option>
                                        {% endfor %}
                                        {% endif %}
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="description">Description</label>
                                    <textarea class="form-control" id="description" name="description" rows="3">{{ talk.description }}</textarea>
                                </div>

                                <button type="button" class="btn btn-primary" id="btnAction" route="/talk/update/{{ talk.id }}">Update</button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}